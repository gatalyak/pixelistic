[
    {
      "name": "web",
      "image": "${image}",
      "portMappings": [
        {
          "containerPort": 80,
          "hostPort": 80
        }
      ],
      "memory": 256,
      "networkMode": "awsvpc",
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "${log_group}",
          "awslogs-region": "eu-central-1",
          "awslogs-stream-prefix": "web"
        }
      },
      "environment": [
        {
          "name": "PIXELISTIC_ENV",
          "value": "production"
        }
      ]
    }
  ]