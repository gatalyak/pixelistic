[
    {
      "name": "api",
      "image": "${image}",
      "portMappings": [
        {
          "containerPort": 3000,
          "hostPort": 3000
        }
      ],
      "memory": 256,
      "networkMode": "awsvpc",
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "${log_group}",
          "awslogs-region": "eu-central-1",
          "awslogs-stream-prefix": "api"
        }
      },
      "environment": [
        {
          "name": "MONGO_DB",
          "value": "${MONGO_DB}"
        },  
        {
          "name": "FRONT_URL",
          "value": "${FRONT_URL}"
        },
        { 
          "name": "AWS_ACCESS_KEY_ID",
          "value": "${AWS_ACCESS_KEY_ID}"
        },  
        { 
          "name": "AWS_SECRET_ACCESS_KEY",
          "value": "${AWS_SECRET_ACCESS_KEY}"
        },
        { 
          "name": "AWS_REGION",
          "value": "${AWS_REGION}"
        },
        { 
          "name": "AWS_S3_BUCKET",
          "value": "${AWS_S3_BUCKET}"
        },
        { 
          "name": "EMAIL_USER",
          "value": "${EMAIL_USER}"
        },
        { 
          "name": "EMAIL_PASS",
          "value": "${EMAIL_PASS}"
        }
      ]
    }
  ]