pipeline {
    agent { label 'Slave2' }  

  environment {
        AWS_ACCESS_KEY_ID     = credentials('AWS_ACCESS_KEY_ID')
        AWS_SECRET_ACCESS_KEY = credentials('AWS_SECRET_ACCESS_KEY')
        MONGO_DB = credentials('MONGO_DB')
        EMAIL_USER = credentials('EMAIL_USER')
        FRONT_URL = "${env.FRONT_URL}"
        DOCKER_USER = credentials('dockerhubyg')
  }  
  stages {
        
    stage('Git') {
      steps {
        git 'https://github.com/gatalyak/pixelistic.git'

      }
    }    
      
    stage('Build backend') {
      steps {
        dir('pixelistic_be'){
          sh 'docker build . -t gatalyak/api:${BUILD_NUMBER}'
        }    
      }
    } 

stage('Build frontend') {
      steps {  
        dir('pixelistic_fe'){
          sh 'docker build --build-arg ${REACT_APP_API_WEB} --build-arg ${REACT_APP_AWS_S3} . -t gatalyak/web:${BUILD_NUMBER}'
        }    
      }
    }  

        stage('Tests'){
            steps {
                echo 'Executing tests'
            }
        }   
        stage('Push Docker images to Docker Hub'){
            steps{
                withCredentials([usernamePassword(credentialsId: 'dockerhubyg', passwordVariable: 'pass', usernameVariable: 'user')]) {
                    sh "docker login -u ${user} -p ${pass}"
                }
                sh "docker push gatalyak/api:${BUILD_NUMBER}"
                sh "docker push gatalyak/web:${BUILD_NUMBER}"
            }
        }


        stage('Deploy'){
            steps {
                dir('deployment'){
                    echo 'Deploying'
                    sh 'ansible-playbook -i dev-servers site-docker.yml -u root -e BUILD_NUMBER=${BUILD_NUMBER} -e DOCKER_PASS=${DOCKER_USER_PSW} -e DOCKER_USER=${DOCKER_USER_USR} -e EMAIL_PASS=${EMAIL_USER_PSW} -e EMAIL_USER=${EMAIL_USER_USR} -e FRONT_URL=${FRONT_URL} -e MONGO_DB=${MONGO_DB} -e AWS_ACCESS_KEY_ID=${AWS_ACCESS_KEY_ID} -e AWS_SECRET_ACCESS_KEY=${AWS_SECRET_ACCESS_KEY}' 
                }
            }
        }      
 




}
}    
